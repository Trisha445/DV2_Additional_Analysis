{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Horizontal Heatmap of Unemployment Rate by State and Period",
  "data": { "url": "data/merged_labour_data.csv" },
  "width": "container",
  "height": "container",
  "mark": { 
    "type": "rect", 
    "stroke": "white", 
    "strokeWidth": 1 
  },
  "encoding": {
    "x": { 
      "field": "State", 
      "type": "nominal", 
      "title": "State", 
      "axis": { 
        "labelAngle": 0, 
        "labelFontSize": 10, 
        "labelAlign": "center",
        "titleFontSize": 12
      },
      "sort": ["Australian Capital Territory", "New South Wales", "Northern Territory", "Queensland", "South Australia", "Tasmania", "Victoria", "Western Australia"]
    },
    "y": { 
      "field": "Year_Quarter", 
      "type": "ordinal", 
      "title": "Period", 
      "axis": { 
        "labelFontSize": 10,
        "titleFontSize": 12
      },
      "sort": "ascending"
    },
    "color": {
      "field": "Unemployment_Rate",
      "type": "quantitative",
      "title": "Unemployment (%)",
      "scale": { 
        "range": ["#fff5eb","#fee6ce","#fdd0a2","#fdae6b","#fd8d3c","#f16913","#d94801"], 
        "domain": [2.5, 6] 
      },
      "legend": { 
        "orient": "right", 
        "titleFontSize": 12, 
        "labelFontSize": 10,
        "gradientLength": 200
      }
    },
    "tooltip": [ 
      { "field": "State", "type": "nominal", "title": "State" }, 
      { "field": "Year_Quarter", "type": "ordinal", "title": "Period" }, 
      { "field": "Unemployment_Rate", "type": "quantitative", "title": "Unemployment Rate (%)", "format": ".1f" } 
    ]
  },
  "config": { 
    "view": { "stroke": "transparent" },
    "axis": { "grid": false },
    "background": "white"
  }
}
